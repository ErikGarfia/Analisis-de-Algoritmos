		t_transcurrido = time() - start_time
	print("Tiempo transcurrido %.6f seconds" %t_transcurrido)


def peorcaso(mylist):
	start_time = time()
	for i in range (mylist):
		list.append(random.randint(0,mylist)) 
	array = list
	print ("El arreglo desordenado es: ")
	for i in range(len(array)):
    	 print("%d" %array[i])
	bubbleSort(array) 
	print ("Arreglo ordenado:") 
	for i in range(len(array)): 
		print("%d" %array[i])
		t_transcurrido = time() - start_time
	print("Tiempo transcurrido %.6f seconds" %t_transcurrido)

opcion = input("QuÃ© tipo de caso quieres?\nA)Mejor Caso\nB)Peor Caso\nC)Promedio\n")
if (opcion == 'A'):
	mylist = input("Cuantos numeros quieres considerar, rango 0-10001\n")
	mylist = int(mylist)
	mejorcaso(mylist)
elif (opcion == 'B'):
	mylist = input("Cuantos numeros quieres considerar, rango 0-10001\n")
	mylist = int(mylist)
	peorcaso(mylist)
elif (opcion == 'C'):
	mylist = input("Cuantos numeros quieres considerar, rango 0-10001\n")
	mylist = int(mylist)
	promedio(mylist)



